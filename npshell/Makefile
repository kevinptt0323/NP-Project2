include ../common/make.common

EXEC = npshell
OBJS = ${COMMON}/builtin.o \
       ${COMMON}/command.o \
       ${COMMON}/job.o \
       ${COMMON}/signal_handler.o \
       ${COMMON}/utils.o

.PHONY: all
all: $(EXEC)

$(EXEC): main.cpp $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $^ -I${COMMON}

clean:
	$(RM) $(EXEC)
